[user]
	email = code@saul.pw
    name = Saul Pwanson

[push]
	default = simple
[alias]
	unadd = reset HEAD
	vdiff = difftool -y -t meld
	vd = difftool -y -t vd
[credential]
	helper = cache --timeout 360000
[diff]
	tool = vimdiff
[merge]
	tool = meld
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vim -f -d -c \"wincmd l\" -c 'cd \"$GIT_PREFIX\"' \"$LOCAL\" \"$REMOTE\"
[difftool "vd"]
    cmd = vd --diff \"$LOCAL\" \"$REMOTE\"
[core]
	pager = less -F -X
	autocrlf = false
